// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // или "mysql", "sqlite" в зависимости от вашей СУБД
  url      = env("DATABASE_URL")
}

model City {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String?
  date        String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}